{
	"name": "uiuiui",
	"version": "0.4.3",
	"main": "dist/uiuiui.cjs.js",
	"module": "dist/uiuiui.js",
	"style": "dist/uiuiui.css",
	"repository": "git@github.com:Evercoder/uiuiui.git",
	"author": "Dan Burzo <danburzo@gmail.com>",
	"license": "MIT",
	"files": [
		"dist"
	],
	"devDependencies": {
		"autoprefixer": "^8.3.0",
		"gh-pages": "^1.2.0",
		"husky": "^0.14.3",
		"npm-run-all": "^4.1.2",
		"postcss": "^6.0.21",
		"prettier": "^1.13.5",
		"pretty-quick": "^1.6.0",
		"react-color": "^2.14.1",
		"rollup": "^0.58.0",
		"rollup-plugin-buble": "^0.19.2",
		"rollup-plugin-commonjs": "^9.1.3",
		"rollup-plugin-css-bundle": "^1.0.1",
		"rollup-plugin-node-resolve": "^3.3.0"
	},
	"dependencies": {
		"culori": "^0.3.0",
		"culori-scales": "^1.0.5",
		"d3-scale": "^2.0.0",
		"memoize-one": "^3.1.1",
		"prop-types": "^15.6.1",
		"react": "^16.3.0",
		"react-dom": "^16.3.0",
		"react-event-listener": "^0.6.0"
	},
	"scripts": {
		"start": "npm-run-all --parallel storybook:start build:watch",
		"storybook:start": "start-storybook --port 6001",
		"storybook:build": "build-storybook",
		"build": "rollup -c",
		"build:watch": "rollup -c -w",
		"docs:start": "docz dev",
		"docs:build": "docz build",
		"docs:deploy": "yarn docs:build && gh-pages -d .docz/dist",
		"precommit": "pretty-quick --staged"
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 4,
		"jsxBracketSameLine": false,
		"arrowParens": "avoid",
		"printWidth": 100
	}
}
