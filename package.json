		"@storybook/addon-actions": "^4.1.11",
		"@storybook/addon-links": "^4.1.11",
		"@storybook/react": "^4.1.11",
		"autoprefixer": "^9.4.7",
		"babel-loader": "^8.0.5",
		"culori-scales": "^1.0.9",
		"docz": "^0.13.7",
		"docz-plugin-css": "^0.11.0",
		"gh-pages": "^2.0.1",
		"husky": "^1.3.1",
		"postcss": "^7.0.14",
		"prettier": "^1.16.4",
		"pretty-quick": "^1.10.0",
		"raw-loader": "^1.0.0",
		"react-live": "^1.12.0",
		"rollup": "^1.1.2",
		"rollup-plugin-buble": "^0.19.6",
		"rollup-plugin-commonjs": "^9.2.0",
		"rollup-plugin-css-bundle": "^1.0.4",
		"rollup-plugin-node-resolve": "^4.0.0",
		"why-did-you-update": "^1.0.6"
	},
	"dependencies": {
		"culori": "^0.7.4",
		"d3-scale": "^2.2.2",
		"memoize-one": "^5.0.0",
		"prop-types": "^15.6.2",
		"react": "^16.8.0",
		"react-dom": "^16.8.0"
	},
	"scripts": {
		"build": "rollup -c",
		"build:watch": "rollup -c -w",
		"storybook:start": "start-storybook --port 6001",
		"storybook:build": "build-storybook -o .storybook/dist",
		"docs:start": "docz dev",
		"docs:build": "docz build",
		"docs:deploy": "yarn docs:build && gh-pages -d .docz/dist"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 4,
		"jsxBracketSameLine": false,
		"arrowParens": "avoid",
		"printWidth": 100
	}
}
